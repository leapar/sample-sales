<Context>
    <!-- Database connection -->
    <Resource driverClassName="com.mysql.jdbc.Driver"
              maxIdle="2"
              maxTotal="20"
              maxWaitMillis="5000"
              name="jdbc/CubaDS"
              password="123456"
              type="javax.sql.DataSource"
              url="jdbc:mysql://localhost:13306/sales?useSSL=false&amp;allowMultiQueries=true"
              username="root"/>
    <!-- Switch off session serialization -->
    <Manager className="org.apache.catalina.session.PersistentManager"
             debug="0"
             distributable="false"
             saveOnRestart="false">
        <Store className="org.apache.catalina.session.FileStore"/>
    </Manager>
    <!--Data store 'mysql_docker' connection-->
    <Resource driverClassName="com.mysql.jdbc.Driver"
              maxIdle="2"
              maxTotal="20"
              maxWaitMillis="5000"
              name="jdbc/mysql_docker"
              password="123456"
              type="javax.sql.DataSource"
              url="jdbc:mysql://localhost:13306/mysql_docker?useSSL=false&amp;allowMultiQueries=true"
              username="root"/>
